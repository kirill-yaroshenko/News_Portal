from django.db import models


class Author(models.Model):
    user_rate: int = models.IntegerField(default = 0)
    author: list = models.OneToOneField(User, on_delete = models.CASCADE)

    def update_rating(self) -> None:


class Category(models.Model):
    article_category: list = models.CharField(max_length = 255, unique = True)


class Posts(models.Model):
    post_author: list = models.ForeignKey(Author, on_delete = models.CASCADE)
    post_category = models.ManyToManyField(Category)



class Comment(models.Model):
    pass

    def like(self) -> None:
        self.comment_rate += 1
        self.save()

    def dislike(self) -> None:
        self.comment_rate -= 1
        self.save()


class PostCategory(models.Model):
    post_cathegory: list = models.ForeignKey(Posts, on_delete = models.CASCADE)
    category_category = models.ManyToManyField(Category)
